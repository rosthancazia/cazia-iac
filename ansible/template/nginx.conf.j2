# nginx.conf.j2
user nginx;
worker_processes auto;
pid /run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    sendfile on;
    keepalive_timeout 65;

    # --- Configurações SSL (Let's Encrypt) ---
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    
    # --- UPSTREAMs para o Docker ---
    upstream whoami_service {
        # O Nginx usa o nome do serviço DNS interno do Docker Swarm
        server whoami:80;
    }
    upstream dashboard_service {
        # O Traefik usa o serviço interno 'api@internal', 
        # mas como Nginx não tem isso, vamos expor a porta da API do Docker no Manager
        # (Alternativa mais complexa, mas mais segura: proxy_pass para o socket Docker)
        server 127.0.0.1:8080; # Usaremos a porta 8080 local do Manager para o Dashboard
    }


    # --- SERVER 1: HTTP (Redirecionamento ACME) ---
    server {
        listen 80;
        listen [::]:80;
        server_name {{ base_domain }} *.{{ base_domain }};

        # Regra obrigatória para o Certbot (ACME HTTP-01 challenge)
        location /.well-known/acme-challenge/ {
            root /var/www/certbot;
        }

        # Redirecionamento para HTTPS
        location / {
            return 301 https://$host$request_uri;
        }
    }

    # --- SERVER 2: HTTPS (Proxy Principal) ---
    server {
        listen 443 ssl http2;
        listen [::]:443 ssl http2;
        server_name {{ base_domain }} *.{{ base_domain }};
        
        # Paths dos certificados (Certbot padrão)
        ssl_certificate /etc/letsencrypt/live/{{ base_domain }}/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/{{ base_domain }}/privkey.pem;

        # Rota para o Dashboard
        location /dashboard/ {
            # Você precisaria de Basic Auth aqui, mas vamos manter simples por enquanto
            proxy_pass http://dashboard_service/; 
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }

        # Rota para Whoami
        location /whoami/ {
            proxy_pass http://whoami_service;
            proxy_set_header Host $host;
        }
    }
}